{% import "macros.html.jinja" as macros -%}

<div id="{{ entry.id.path }}">
  {% call macros.maybe_spoilered(entry) %}
    {{ macros.header(entry, "entry-title") }}
    {% for page in entry.pages %}
      {% include "pages/" ~ page.__class__.__name__ ~ ".html.jinja" %}
    {% endfor %}
  {% endcall %}
</div>