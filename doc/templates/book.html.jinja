<div class="container">
  {% if show_landing_text %}
    <header class="jumbotron">
      <h1 class="book-title">
        {{ book.name }}
      </h1>
      {{ book.landing_text | hexdoc_block }}
    </header>
  {% endif %}
  <nav>
    {% include "tableofcontents.html.jinja" %}
  </nav>
  <main class="book-body">
    {% for category in book.categories.values() %}
      {% include "category.html.jinja" %}
    {% endfor %}
  </main>
</div>
