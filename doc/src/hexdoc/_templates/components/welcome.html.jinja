{% import "macros/formatting.html.jinja" as fmt with context -%}

<div class="container" style="margin-top: 3em;">
  <blockquote>
    <h1>{{ fmt.styled(_f("hexdoc.welcome.1")).format(mod_name) }}</h1>
    <p>{{ fmt.styled(_f("hexdoc.welcome.2")) }}</p>
    {% if is_bleeding_edge %}
      <p>{{ fmt.styled(_f("hexdoc.welcome.3")) }}</p>
    {% endif %}
    <p>{{ fmt.styled(_f("hexdoc.welcome.4")) }}</p>

    {# conditionally revealed using js #}
    <span id="old-version-notice" class="hidden">
      <br />
      {{ fmt.styled(_f("hexdoc.welcome.old_version")) }}
    </span>
  </blockquote>
</div>
